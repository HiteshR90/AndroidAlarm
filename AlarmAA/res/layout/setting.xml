<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayoutm"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/txt_setting_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:text="Battery" />

        <ImageButton
            android:id="@+id/image_setting_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#80000000"
            android:src="@drawable/settings" />

        <ImageButton
            android:id="@+id/image_setting_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_setting_setting"
            android:layout_toLeftOf="@+id/image_setting_setting"
            android:background="#80000000"
            android:src="@drawable/alarm" />

        <ImageButton
            android:id="@+id/image_setting_clcok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_setting_alarm"
            android:layout_toLeftOf="@+id/image_setting_alarm"
            android:background="#80000000"
            android:src="@drawable/clock" />
    </RelativeLayout>



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="370dip" 
        android:layout_marginTop="44dip">

    <RelativeLayout
        android:layout_width="321dip"
        android:layout_height="100dip" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            
            <TextView
            android:id="@+id/txt_setting_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/relativeLayout1"
            android:text="Clock"
            android:textSize="20dip" />

            <TextView
                android:id="@+id/txt_setting_clock1"
                android:layout_width="wrap_content"
                android:layout_below="@+id/txt_setting_clock"
                android:layout_height="wrap_content"
                android:textSize="20dip" 
                android:layout_marginLeft="35dp"
                android:text="Clock"/>

            <Spinner
                android:id="@+id/spin_setting_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_setting_clock1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/realative_setting_battary"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/relativeLayout1"
             >

            <TextView
                android:id="@+id/txt_Setting_battery1"
                android:text="Battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:textSize="20dip" 
                android:layout_marginLeft="35dp"/>

             <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Setting_battery1"
            android:layout_toRightOf="@+id/realative_setting_battary" 
            />
        </RelativeLayout>

       
        
    </RelativeLayout>

    </ScrollView>
	
    <Button
        android:id="@+id/btn_setting_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Done" />

</RelativeLayout>
