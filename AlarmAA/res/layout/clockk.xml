<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" 
        android:background="#00000000">

        <TextView
            android:id="@+id/txt_clcokk_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:text="Battery" />

        <ImageButton
            android:id="@+id/img_clock_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/settings" />

        <ImageButton
            android:id="@+id/img_clock_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_clock_setting"
            android:layout_toLeftOf="@+id/img_clock_setting"
            android:background="#00000000"
            android:src="@drawable/alarm" />

        <ImageButton
            android:id="@+id/img_clock_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_clock_alarm"
            android:layout_toLeftOf="@+id/img_clock_alarm"
            android:background="#00000000"
            android:src="@drawable/clock" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_digital"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp" >

        <TextView
            android:id="@+id/lbltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:text="02:00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="90dip" />

        <TextView
            android:id="@+id/lblampam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lbltime"
            android:layout_alignBottom="@+id/lbltime"
            android:layout_toRightOf="@+id/lbltime"
            android:text="AM"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="50dip" />

        <TextView
            android:id="@+id/lbldate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lbltime"
            android:layout_below="@+id/lbltime"
            android:layout_marginLeft="19dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout4"
        android:layout_toLeftOf="@+id/textView1"
        android:src="@drawable/weather_icon"
        android:background="#00000000" />

    <TextView
        android:id="@+id/lbltemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton1"
        android:layout_toRightOf="@+id/imageButton1"
        android:text="30"
        android:textAppearance="?android:attr/textAppearanceLarge" />
   
</RelativeLayout>
